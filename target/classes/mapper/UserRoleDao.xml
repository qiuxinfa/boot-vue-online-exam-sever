<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qxf.dao.UserRoleDao">

    <resultMap type="com.qxf.entity.UserRole" id="UserRoleMap">
        <result property="id" column="id" jdbcType="VARCHAR"/>
        <result property="userId" column="user_id" jdbcType="VARCHAR"/>
        <result property="roleId" column="role_id" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserRoleMap">
        select
          id, user_id, role_id
        from boot_vue_online_exam.user_role
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserRoleMap">
        select
          id, user_id, role_id
        from boot_vue_online_exam.user_role
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="UserRoleMap">
        select
          id, user_id, role_id
        from boot_vue_online_exam.user_role
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="roleId != null and roleId != ''">
                and role_id = #{roleId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert">
        insert into boot_vue_online_exam.user_role(id,user_id, role_id)
        values (#{id},#{userId}, #{roleId})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update boot_vue_online_exam.user_role
        <set>
            <if test="userId != null and userId != ''">
                user_id = #{userId},
            </if>
            <if test="roleId != null and roleId != ''">
                role_id = #{roleId},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from boot_vue_online_exam.user_role where id = #{id}
    </delete>

</mapper>